{% extends 'base.html.twig' %}

{% block title %}
    Contenu
{% endblock %}


{% block body %}
    <div class="row ">
        <nav>
            <div class="nav-wrapper brown lighten-3">
               <div class="container">
                    <div class="col s12">
                      <a href="/Administration" class="breadcrumb">Administration</a>
                      <a href="/categorieList" class="breadcrumb">Categorie</a>
                    </div>
               </div>
            </div>
          </nav>
        <div class="col l12 col m12 col s12 col xs12 margin-top">
            <div class="container">
                <div class="row right">
                    <a href="{{ path("categorie_new")}}" class="btn  blue-grey">Ajouter une nouvelle categorie</a>
                </div>
                <div class="row margin-top">
                <table class="bordered ">
                    <thead>
                      <tr>
                          <th>Nom de categorie</th>
                          <th>Action</th>
                      </tr>
                    </thead>

                    <tbody>
                        {%if categories is defined  and categories!=null%}
                            {% for categorie in categories %}
                             <tr>
                                <td>{{categorie.titre}}</td>
                                <td><a href="{{path('categorie_edit',{'id':categorie.id})}}" class="orange-text text-lighten-2"><i class="material-icons">edit</i></a></td>
                             </tr>
                            {%endfor%}
                        {%endif%}
                    </tbody>
                 </table>
               </div>
            </div>
        </div>
    </div>
{% endblock %}
