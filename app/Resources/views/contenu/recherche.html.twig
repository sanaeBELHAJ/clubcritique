{% extends 'base.html.twig' %}

{% block title %}
    
{% endblock %}


{% block body %}
    <div class="row margin-top">
        <div class="container">
            <div class="col l12 col m12 col s12 col xs12">
                <form action="{{ path('article_articlesbycateg', {"id":id_categorie}) }}" method="POST">
                     <div class="row ">
                         <div class="col s7"></div>
                        <div class="input-field col s3">
                            <input type="text" name="titre">
                            <label for="titre">Recherche par titre : </label>
                        </div>
                        <div class="input-field col s2 right">
                            <input type="submit" value="rechercher" class="waves-effect waves-light btn">
                        </div>
                    </div>
                    
                </form>
            </div>
        </div>
        <div class="col l12 col m12 col s12 col xs12">
            <div class="container">
                {%for article in articles%}
                     <div class="col s3">
                        <div class=" card teal lighten-4">
                            <div class="card-image waves-effect waves-block waves-light">
                                {% if article.image == null %}
                                    <img class="activator" height="200px"  src="{{ asset('images/default.png') }}">
                                {% else %}
                                    <img class="activator" height="200px" src="../ressource/article/{{ article.image }}">
                                {% endif %}
                            </div>
                            <div class="card-content">
                                <span class="card-title activator white-text text-darken-4" style="font-size: 13px">{{ article.titre }}<i class="material-icons right">more_vert</i></span>
                            </div>
                            <div class="card-action brown lighten-5">
                                <a href="{{ path('article_view', {"idA":article.id}) }}" class="brown-text text-darken-4">Voir details</a>
                            </div>
                            <div class="card-reveal brown lighten-5">
                                <span class="card-title grey-text text-darken-4  ">{{ article.titre }}<i class="material-icons right">close</i></span>
                                <p>{{ article.resume }}</p>
                            </div>
                        </div>
                    </div>
                {%endfor%}
            </div>
        </div>
    </div>
{% endblock %}
